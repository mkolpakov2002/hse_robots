<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenuFragment">

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="ru.hse.control_system_v2.MainMenuFragment"
        android:label="main"
        app:defaultNavHost="true"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainMenuFragment_to_settings_Fragment"
            app:destination="@id/settings_Fragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_addDeviceDBActivity"
            app:destination="@id/addDeviceDBActivity" />
        <action
            android:id="@+id/action_mainMenuFragment_to_manual_mode"
            app:destination="@id/manual_mode" />
    </fragment>
    <fragment
        android:id="@+id/settings_Fragment"
        android:name="ru.hse.control_system_v2.Settings_Fragment"
        android:label="settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settings_Fragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>
    <activity
        android:id="@+id/addDeviceDBActivity"
        android:name="ru.hse.control_system_v2.dbdevices.AddDeviceDBActivity"
        android:label="AddDeviceDBActivity"
        tools:layout="@layout/add_bd_device"/>
    <activity
        android:id="@+id/manual_mode"
        android:name="ru.hse.control_system_v2.Manual_mode"
        android:label="Manual_mode"
        tools:layout="@layout/manual_mode"/>
</navigation>