    </style>

    <style name="HSERobotsChip.Selection" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:checkable">true</item>
        <item name="chipSurfaceColor">?colorPrimary</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="HSERobotsTextInputLayout.OutlinedBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">@dimen/textinputlayout_box_corners_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/textinputlayout_box_corners_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/textinputlayout_box_corners_radius</item>
