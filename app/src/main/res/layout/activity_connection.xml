<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textViewNameManualBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/control_panel"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameManualBt"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="193dp"
            android:layout_height="221dp"
            android:layout_marginStart="30dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <SeekBar
                android:id="@+id/seekBarBt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_hold_command_mm_Bt"
                android:layout_width="172dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:text="@string/command_hold"
                android:textSize="10sp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/button_up_bt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:thumbTint="@color/switch_thumb"
                app:trackTint="@color/switch_track" />

            <Button
                android:id="@+id/button_left_45_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:text="@string/button_left_n45"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/button_left_bt"
                app:layout_constraintEnd_toStartOf="@+id/button_up_bt"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/button_up_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                app:layout_constraintBottom_toTopOf="@+id/button_stop_bt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_right_45_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:text="@string/button_right_n45"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/button_right_bt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_up_bt" />

            <ImageButton
                android:id="@+id/button_left_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                app:layout_constraintBottom_toTopOf="@+id/button_down_bt"
                app:layout_constraintEnd_toStartOf="@+id/button_stop_bt"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/button_stop_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:src="@drawable/ic_baseline_stop_24"
                app:layout_constraintBottom_toTopOf="@+id/button_down_bt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/button_right_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                app:layout_constraintBottom_toTopOf="@+id/button_down_bt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_stop_bt" />

            <Button
                android:id="@+id/button_left_90_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:text="@string/button_left_n90"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/button_down_bt"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_left_bt" />

            <ImageButton
                android:id="@+id/button_down_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_right_90_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:text="@string/button_right_n90"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_down_bt"
                app:layout_constraintTop_toBottomOf="@+id/button_right_bt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/incoming_data_bt"
            android:layout_width="277dp"
            android:layout_height="137dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="220dp"
            android:background="@drawable/textview_bg"
            android:gravity="bottom"
            android:text="@string/terminal"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintStart_toEndOf="@+id/scrollView5" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="253dp"
            android:layout_height="225dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
            tools:context=".ConnectionActivity">

            <TextureView
                android:id="@+id/textureView"
                android:layout_width="233dp"
                android:layout_height="124dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textureView"
                app:layout_constraintVertical_bias="0.486">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:text="КАМЕРА ПЕРЕДНЯЯ"
                    android:textSize="6dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:text="КАМЕРА ЗАДНЯЯ"
                    android:textSize="6dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:text="СНИМОК"
                    android:textSize="6dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutBtnRight"
            android:layout_width="201dp"
            android:layout_height="212dp"

            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout3">

            <SeekBar
                android:id="@+id/seekBarBtRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/button_left_45_bt_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:text="@string/button_left_n45"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/button_left_bt_right"
                app:layout_constraintEnd_toStartOf="@+id/button_up_bt_right"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/button_up_bt_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                app:layout_constraintBottom_toTopOf="@+id/button_stop_bt_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_right_45_bt_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:text="@string/button_right_n45"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/button_right_bt_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_up_bt_right" />

            <ImageButton
                android:id="@+id/button_left_bt_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                app:layout_constraintBottom_toTopOf="@+id/button_down_bt_right"
                app:layout_constraintEnd_toStartOf="@+id/button_stop_bt_right"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/button_stop_bt_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:src="@drawable/ic_baseline_stop_24"
                app:layout_constraintBottom_toTopOf="@+id/button_down_bt_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/button_right_bt_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                app:layout_constraintBottom_toTopOf="@+id/button_down_bt_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_stop_bt_right" />

            <Button
                android:id="@+id/button_left_90_bt_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:text="@string/button_left_n90"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/button_down_bt_right"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_left_bt_right" />

            <ImageButton
                android:id="@+id/button_down_bt_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_button"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_right_90_bt_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:text="@string/button_right_n90"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_down_bt_right"
                app:layout_constraintTop_toBottomOf="@+id/button_right_bt_right" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scrollView5"
            android:layout_width="185dp"
            android:layout_height="108dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <GridLayout
                android:id="@+id/btn_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="vertical"
                android:rowCount="3"
                android:layout_gravity="fill">

                <Button
                    android:id="@+id/btn_servo"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="Servomotors"
                    android:textSize="8dp" />

                <Button
                    android:id="@+id/btn_speed"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:text="Speed"
                    android:textSize="8dp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="Btn_1"
                    android:textSize="8dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Btn_2"
                    android:textSize="8dp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:text="Btn_3"
                    android:textSize="8dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:text="Btn_4"
                    android:textSize="8dp" />
            </GridLayout>
        </ScrollView>

        <!-- app:layout_constraintBottom_toTopOf="@+id/button_up_bt"-->

        <!--app:layout_constraintTop_toBottomOf="@+id/switch_hold_command_mm_Bt" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>