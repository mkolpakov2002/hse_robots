    <style name="HSERobotsMaterialButton.Fab" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="fabSize">normal</item>
        <item name="tint">?attr/colorPrimary</item>
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearance.App.SmallComponent
        </item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">

        <item name="cornerSize">20dp</item>
    </style>

    <style name="HSERobotsToolbar">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="android:textColorSecondary">?attr/colorAccent</item>
        <item name="actionMenuTextColor">?attr/simpleThemeTextSecondaryColor</item>
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="colorOnPrimary">?attr/colorPrimaryDark</item>
        <item name="contentScrim">?attr/colorAccent</item>
    </style>

    <style name="HSERobotsTextViewStyle" parent="Base.Widget.AppCompat.TextView">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="HSERobotsBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="itemIconTint">@color/selector_bottom_navigation</item>
        <item name="itemTextColor">@color/selector_bottom_navigation</item>
    </style>

    <style name="AlertDialog.AppTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">?attr/backgroundTint</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">?attr/simpleThemeTextPrimaryColor</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/HSERobotsMaterialButton.Slim</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/HSERobotsTextButtonStyle</item>
    </style>

    <style name="HSERobotsTextButtonStyle" parent="@style/HSERobotsMaterialButton">
        <!-- text color for the button -->
        <item name="android:textColor">@color/selector_outlined_button_text_color</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@android:color/transparent</item>
    </style>


    <style name="AlertDialog.AppTheme.Simple" parent="AlertDialog.AppTheme">
        <item name="android:textColorPrimary">?attr/simpleThemeTextSecondaryColor</item>
        <item name="android:textColorSecondary">?attr/simpleThemeTextPrimaryColor</item>
    </style>

    <style name="HSERobotsPopupMenu.Light" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_rounded_popup</item>
    </style>

    <style name="HSERobotsPopupMenu.Dark" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_rounded_popup</item>
    </style>

    <style name="HSERobotsChip.Filter" parent="Widget.MaterialComponents.Chip.Action">
